                <thead>
                    <tr>
                        <th>
                            {{game.ChannelName}}
                        </th>
                        <th>
                            {{game.AwayTeam}}
                        </th>
                        <th>
                            {{game.HomeTeam}}
                        </th>
                        <th>
                            {{game.AwayScore}}
                        </th>
                        <th>
                            {{game.HomeScore}}
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    <tr ng-repeat="game in model.Games">
                        <td>
                            {{game.Channel.ChannelName}}
                        </td>
                        <td>
                            {{game.AwayTeam}}
                        </td>
                        <td>
                            {{game.HomeTeam}}
                        </td>
                        <td>
                            {{game.AwayScore}}
                        </td>
                        <td>
                            {{game.HomeScore}}
                        </td>
                        <td>
                            {{Html.ActionLink("Edit", "Edit", new { id = game.GameId })}} |
                            {{Html.ActionLink("Details", "Details", new { id = game.GameId })}} |
